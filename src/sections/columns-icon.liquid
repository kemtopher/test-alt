<style>
.icon-columns {
    padding: 53px 0;
    background: rgb(247,248,248);
    background: linear-gradient(45deg, rgba(247,248,248,1) 0%, rgba(250,251,251,1) 100%);
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    flex-wrap: wrap;
}
.col-icon {
    width: 30%;
    max-width: 191px;
    color: {{ section.settings.text_color }};
    text-align: center;
}
.col-icon p {
    font-family: Roboto-Bold;
    font-size: 20px;
    letter-spacing: 1px;
    text-align: center;
    line-height: 28px;
    padding-top: 2s9px;
    margin: 0;
}
@media (max-width: 768px) {
    .icon-columns {
        flex-direction: column;
        align-items: center;
    }
    .col-icon {
        width: 40%;
    }
    .col-icon:nth-child(n+2) {
        padding-top: 42px;
    }
    .col-icon p {
        font-size: 16px;
        letter-spacing: 0.8px;
        line-height: 24px;
        padding-top: 14px;
        margin: 0;
    }
}
</style>



<section class="icon-columns">
    <div class="col-icon">
        {% include "icon-shipping" %}
        <p>{{ section.settings.text_one }}</p>
    </div>
    <div class="col-icon">
        {% include "icon-returns" %}
        <p>{{ section.settings.text_two }}</p>
    </div>
    <div class="col-icon">
        {% include "icon-secure" %}
        <p>{{ section.settings.text_three }}</p>
    </div>
</section>



{% schema %}
{
    "name": "Icon Columns",
    "settings": [
        {
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#000000"
        },
        {
            "type": "text",
            "id": "text_one",
            "label": "First Column Text",
            "default": "FREE SHIPPING ON ALL ORDERS"
        },
        {
            "type": "text",
            "id": "text_two",
            "label": "Second Column Text",
            "default": "FREE RETURNS ON ALL ORDERS"
        },
        {
            "type": "text",
            "id": "text_three",
            "label": "Third Column Text",
            "default": "SAFE & SECURE CHECKOUT"
        }
    ],
    "presets": [
        {
            "name": "Columns w/ Icons",
            "category": {
                "en": "Collection"
            }
        }
    ]
}
{% endschema %}