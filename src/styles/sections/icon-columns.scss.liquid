.icon-columns {
    padding: 53px 0;
    background-color: {{ section.settings.background_color }};
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    flex-wrap: wrap;
}
.col-icon {
    width: 30%;
    max-width: 191px;
    color: {{ section.settings.text_color }};
    text-align: center;
}
.col-icon p {
    font-family: Roboto-Bold;
    font-size: 20px;
    letter-spacing: 1px;
    text-align: center;
    line-height: 28px;
    padding-top: 2s9px;
    margin: 0;
}
@media (max-width: 768px) {
    .icon-columns {
        flex-direction: column;
        align-items: center;
    }
    .col-icon {
        width: 40%;
    }
    .col-icon:nth-child(n+2) {
        padding-top: 42px;
    }
    .col-icon p {
        font-size: 16px;
        letter-spacing: 0.8px;
        line-height: 24px;
        padding-top: 14px;
        margin: 0;
    }
}